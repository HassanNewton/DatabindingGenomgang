<Window x:Class="DatabindingExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatabindingExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="txtInput" 
                 VerticalAlignment="Center" 
                 Width="250" Height="48" 
                 FontSize="16" 
                 Text="{Binding Boundtext, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

        <Button Grid.Row="1" x:Name="btnSet" 
                Content="set" Width="100"
                Height="40" Click="btnSet_Click"/>

        <TextBlock Grid.Row="2" x:Name="tbResult" FontSize="16"
                   Text="{Binding Boundtext}" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center"/>


    </Grid>
</Window>
