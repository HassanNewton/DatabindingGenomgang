<Window x:Class="DatabindingExample.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatabindingExample"
        mc:Ignorable="d"
        Title="Window3" Height="450" Width="800">
    <Grid>
        <StackPanel>
            
            <TextBox x:Name="txtBoxInput" Width="200" />
            <Button Content="Add Task" Click="AddTask_Click" Width="100"/>

            <ListBox ItemsSource="{Binding Tasks}" 
                     SelectedItem="{Binding SelectedTask}"
                     Width="200" Height="100"/>

            <Label Content="{Binding SelectedTask}" Width="200"/>
            <Button Content="Remove Task" Click="RemoveTask_Click" Width="100"/>

        </StackPanel>
    </Grid>
</Window>
