<Window x:Class="DatabindingExample.Exempel4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatabindingExample"
        mc:Ignorable="d"
        Title="Exempel4" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox HorizontalAlignment="Left"  Text="{Binding SliderValue,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                     VerticalAlignment="Top" Width="120"/>
            
            <Slider HorizontalAlignment="Left"  VerticalAlignment="Top" Width="120" 
                    Value="{Binding SliderValue, Mode=TwoWay}"/>

        </StackPanel>
        
    </Grid>
</Window>
